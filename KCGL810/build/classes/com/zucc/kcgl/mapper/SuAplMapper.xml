<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        

<mapper namespace="com.zucc.kcgl.mapper.SuAplMapper">
	<resultMap type="com.zucc.kcgl.model.sucApplication" id="suAplResultMap">
		<id column="id" property="id"/>
		<result column="equid" property="equId"/>
		<result column="equname" property="equName"/>
		<result column="state" property="state"/>
		<result column="version" property="version"/>
		<result column="userid" property="userId"/>
		<result column="username" property="userName"/>
		<result column="code" property="code"/>
		
		
	</resultMap>
	
	<insert id="addSuApl" parameterType="com.zucc.kcgl.model.sucApplication">
		insert sucapplication(equid,equname,state,version,userid,username,code) 
		values(#{equId},#{equName},#{state},#{version},#{userId},#{userName},#{code})
	</insert>
	
	<update id="updateSuApl" parameterType="com.zucc.kcgl.model.sucApplication">
		update sucapplication set state=#{state}
		 where code=#{code}
	</update>
	
	<select id="getSuApl" parameterType="int" resultType="com.zucc.kcgl.model.sucApplication">
		select * from application where code=#{code}
	</select>
	
	<select id="getOutSuApl" parameterType="int" resultType="com.zucc.kcgl.model.sucApplication">
		select * from application where code=#{code} and state='out'
	</select>
	
	<select id="getAllSuAplByUser" parameterType="int" resultType="com.zucc.kcgl.model.sucApplication">
		select * from application where userid=#{userId}
	</select>
	
	

</mapper>
